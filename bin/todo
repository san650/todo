#!/usr/bin/env bash

COMMAND="$1"
shift

FILE="$HOME/.todo"

function print_all
{
  cat -n $FILE
}

function print_pending
{
  cat -n $FILE | sed -n '/- \[ \]/p'
}

case $COMMAND in
  "")
    print_pending
    ;;
  add)
    MESSAGE="$@"
    echo "- [ ] $MESSAGE" >> $FILE
    ;;
  all)
    print_all
    ;;
  "done")
    sed -i '' "$1s/\[ \]/[x]/" $FILE
    ;;
  undone)
    sed -i '' "$1s/\[x\]/[ ]/" $FILE
    ;;
  filter)
    print_pending | grep "$1"
    ;;
  edit)
    if [ ! -z "$1" ] && [ ! -z "$2" ]; then
      LINE=$1
      shift
      MESSAGE="$@"

      sed -i '' "${LINE}c\\
- [ ] $MESSAGE
" $FILE
    else
      vim $FILE
    fi
    ;;
  raw)
    cat $FILE
    ;;
  *)
    echo "Error: command '$COMMAND' unknown

    Usage:
        todo add [message]
        todo done [n]
        todo undone [n]"
    exit 1
    ;;
esac
